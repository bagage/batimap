{
    "rulesDirectory": ["node_modules/codelyzer"],
    "extends": ["angular-tslint-rules"],
    "rules": {
        "array-type": [true, "array-simple"],
        "deprecation": {
            "severity": "warning"
        },
        "template-i18n": [false], // there is no i18n here

        "newline-per-chained-call": false, // prettier's responsibility
        "angular-whitespace": [false], // prettier's responsibility
        "prefer-inline-decorator": false, // prettier's responsibility
        "trailing-comma": false, // prettier's responsability

        "unnecessary-else": false,
        "comment-type": false,
        "prefer-conditional-expression": false,
        "strict-boolean-expressions": false,

        "no-floating-promises": false,
        "typedef": false,
        "no-void-expression": false,
        "no-import-side-effect": false,
        "template-no-call-expression": false, // fixme
        "template-cyclomatic-complexity": false, //fixme
        "no-require-imports": false, // fixme?
        "template-use-track-by-function": false, // fixme
        "no-call-expression": [false], // fixme
        "no-console": false //fixme
    }
}
